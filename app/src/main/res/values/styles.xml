<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavigationStyle">
        <!--<item name="fontFamily">@font/avenir_medium</item>-->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="OutlinedBoxWhiteWithBlackOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="onlyborderButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_height">45dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/primary</item>
    </style>

    <style name="logoutButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">#DD7B7B</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">45dp</item>
        <item name="rippleColor">#F64848</item>
        <item name="strokeColor">@color/black</item>
    </style>

</resources>